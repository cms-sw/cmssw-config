# -*-toolbox-*-

<Architecture name=slc3_ia32_gcc323>
<makefile>
F77compiler:=g77
CCcompiler:=gcc3
</makefile>
</Architecture>

<Architecture name=slc3_ia32_gcc323_dbg>
<Flags CXXFLAGS="-O0 -g -DDEBUG">
<makefile>
F77compiler:=g77
CCcompiler:=gcc3
CXXFLAGS := $(patsubst -O2,,$(CXXFLAGS))
</makefile>
</Architecture>

